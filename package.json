{
  "name": "savvy-transfer",
  "version": "1.0.0",
  "description": "browsers-compatible file system",
  "main": "index.js",
  "scripts": {
    "cz": "git-cz",
    "clean": "rimraf dist",
    "start": "cross-env NODE_ENV=development rollup -w -c scripts/rollup.config.dev.js",
    "build": "yarn run clean && cross-env NODE_ENV=production rollup -c scripts/rollup.config.prod.js",
    "release": "standard-version"
  },
  "repository": {
    "type": "git",
    "url": "http://gogs.rto.im/savvy/savvy-transfer.git"
  },
  "author": "FPG",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && git add .",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.tsx": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.3.0",
    "@babel/plugin-proposal-decorators": "^7.3.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/runtime": "^7.3.1",
    "@commitlint/cli": "^7.5.1",
    "@commitlint/config-conventional": "^7.5.0",
    "@types/filesystem": "0.0.29",
    "@typescript-eslint/parser": "^1.3.0",
    "commitizen": "^3.0.5",
    "commitlint-config-cz": "^0.11.1",
    "cross-env": "^5.2.0",
    "cz-customizable": "^5.3.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^1.3.1",
    "ignore-styles": "^5.0.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-img": "^1.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-typescript": "^1.0.0",
    "rollup-plugin-uglify": "^6.0.2",
    "standard-version": "^4.4.0",
    "ts-node": "^8.0.2",
    "typed-css-modules": "^0.3.7",
    "typescript": "^3.3.3",
    "uglify-es": "^3.3.9"
  }
}
